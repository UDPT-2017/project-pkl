<div class="container-fluid collapse" id="signInForm" style="background-image:url('ligerrat/images/demo/backgrounds/Wooden.jpg');">
    <div class="container">
        <h4>Đăng nhập</h4>
        <form method="post" action="/signIn">
            <div class="form-group">
                <label for="username">Tên đăng nhập:</label>
                <input type="text" class="form-control" id="username" name="username" placeholder="Xin nhập tên đăng nhập">
            </div>
            <div class="form-group">
                <label for="pwd">Mật khẩu:</label>
                <input type="password" class="form-control" id="pwd" name="password" placeholder="Xin nhập mật khẩu">
            </div>
            <div class="checkbox">
                <label><input type="checkbox">Nhớ tên đăng nhập và mật khẩu</label>
            </div>
            <button type="submit" class="btn btn-default">Đăng nhập</button>
            {{#if message}}  
                <script>alert('{{message}}')</script>
            {{/if}}
        </form>
    </div>
</div>
